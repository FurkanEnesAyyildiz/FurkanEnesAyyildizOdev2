<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.VucutKitleIndeksi">

    <StackLayout Padding="20">
        <Label Text="Vücut Kitle İndeksi (BMI) Hesaplama" FontSize="24" HorizontalOptions="Center" />

        <Label Text="Kilo (kg):" FontSize="20" />
        <Entry x:Name="weightEntry" Keyboard="Numeric" Placeholder="Kilonuzu girin" />

      <Label Text="Boy (m):" FontSize="20" />
      <Entry x:Name="heightEntry" Keyboard="Numeric" Placeholder="Boyunuzu girin" />

        <Button Text="Hesapla" Clicked="OnCalculateClicked" />

        <Label x:Name="resultLabel" FontSize="20" TextColor="Aqua" HorizontalOptions="Center" />
        <Label x:Name="categoryLabel" FontSize="18" TextColor="Yellow" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
